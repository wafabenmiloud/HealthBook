{% extends 'base.html.twig' %}

{% block title %}Appointment List{% endblock %}

{% block body %}
<div class="container">
    <h1>Appointment List</h1>
    <a href="{{ path('appointment_new') }}" class="btn btn-success">Add Appointment</a>
    <table class="table mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Patient</th>
                <th>Doctor</th>
                <th>Clinic</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for appointment in appointments %}
                <tr>
                    <td>{{ appointment.id }}</td>
                    <td>{{ appointment.date|date('Y-m-d H:i') }}</td>
                    <td>{{ appointment.status }}</td>
                    <td>{{ appointment.doctor.name }}</td>
                    <td>{{ appointment.clinic.name }}</td>
                    <td>
                        <a href="{{ path('appointment_edit', {id: appointment.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                        <a href="{{ path('appointment_delete', {id: appointment.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
