{% extends 'base.html.twig' %}

{% block title %}Doctor List{% endblock %}

{% block body %}
<div class="container">
    <form class="form-inline justify-content-center mt-4" method="get" action="{{ path('doctor_list') }}">
        <div class="input-group w-75">
            <input 
                type="search" 
                name="search" 
                class="form-control form-control-lg" 
                placeholder="Search for doctors by name" 
                value="{{ app.request.get('search') }}" 
                aria-label="Search">
            <div class="input-group-append">
                <button class="btn btn-primary btn-lg" type="submit">Search</button>
            </div>
        </div>
    </form>
</div>

<div class="container mt-5">
    <h1 class="text-primary mb-4">Doctors</h1>
    {% if doctors|length > 0 %}
        <div class="row">
            {% for doctor in doctors %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title text-success">{{ doctor.name }}</h5>
                            <p class="card-text">
                                <strong>Specialization:</strong> {{ doctor.specialization }}<br>
                                <strong>Email:</strong> {{ doctor.email }}<br>
                                <strong>Phone:</strong> {{ doctor.phone }}
                            </p>
                            <a href="{{ path('doctor_view', {id: doctor.id}) }}" class="btn btn-primary btn-sm">
                                View Profile
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-warning">
            <strong>No doctors found.</strong> Try searching with different keywords!
        </div>
    {% endif %}
</div>
{% endblock %}
